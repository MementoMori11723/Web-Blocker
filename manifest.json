{
    "name": "Web-dev-Block",
    "version": "1.0",
    "description": "This is a web-blocker",
    "permissions": ["webRequest", "webRequestBlocking", "<all_urls>", "storage"],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/blocker.png",
            "48": "icons/blocker.png",
            "128": "icons/blocker.png"
        }
    },
    "icons": {
        "16": "icons/blocker.png",
        "48": "icons/blocker.png",
        "128": "icons/blocker.png"
    },
    "manifest_version": 2
}

